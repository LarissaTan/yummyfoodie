<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="15dp"
        android:background="#deb887"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/img_shuaxin"
            android:src="@drawable/shuaxin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="5dp"
            android:fontFamily="@font/cherry_cream_soda"
            android:text="Yummy Foodie"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/info_list_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fanhui"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="15dp"
        android:padding="15dp"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/sousuo"
            android:src="@drawable/sousuo"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_sousuo"
            android:layout_toLeftOf="@id/sousuo"
            android:layout_toRightOf="@+id/info_list_back"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:background="@drawable/et_sousuo"
            />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_list"
        android:divider="#f1f1f1"
        android:dividerHeight="1dp"
        >

    </ListView>

</LinearLayout>