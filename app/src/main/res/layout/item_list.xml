<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="30dp"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_r"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_info_iv"
            android:src="@drawable/img1"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/card_r"
        android:fontFamily="@font/alegreya_sans_medium_italic"
        android:text="Fish-Flavored"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_info_tv_notitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/card_r"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="35dp"
        android:layout_toRightOf="@id/card_r"
        android:textSize="12sp"
        android:maxLines="2"
        android:text="Main ingredients: Arrowhead 300 grams, tenderloin 150 grams" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/jiantou"
        android:id="@+id/item_info_iv_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>